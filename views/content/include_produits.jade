.col.s12.m12.l12
	each prod in produits
		.col.s12.m6.l4
			.card.small
				.card-image.waves-effect.waves-block.waves-light
					img.activator(src='#{prod.image_prod}', height='200')
				.card-content
					span.card-title.card-title-small.activator.grey-text.text-darken-4
						| #{prod.desc_prod}
						i.mdi-navigation-more-vert.right
					p
						a.deep-orange-text(href='#') #{prod.prix_prod} DA
				.card-reveal
					span.card-title.card-title-small.grey-text.text-darken-4
						| #{prod.desc_prod} 
						i.mdi-navigation-close.right
					p
						span #{prod.date_prod}
						br
						if prod.etat_prod
							span.green-text disponible
						else
							span.red-text non disponible
						br
						| #{prod.design_prod}